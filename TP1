void mostrarResultados();
{   
    int opcion;
    do{
        cout<<"\nMENU: "<<endl;
        cout<<"1. Cargar y procesar encuesta"<<endl;
        cout<<"2. Mostrar resultados"<<endl;
        cout<<"3. Salir"<<endl;
        cout<<"Elija una opcion: ";
        cin>>opcion;
        switch (opcion){
            case 1:
            cargarEncuesta();
            break;
            case 2:
            mostrarResultados();
            break;
            case 3:
            break;
            default: 
            cout<<"Opcion no valida."<<endl;
        }
    } while (opcion!=3);
    return 0;
}
